{
  "name": "@dcdavidev/baka",
  "version": "0.0.1",
  "private": false,
  "description": "A dummy project",
  "keywords": [
    "template",
    "dummy",
    "baka"
  ],
  "homepage": "https://github.com/dcdavidev/nx-workspace-nodejs#readme",
  "bugs": {
    "url": "https://github.com/dcdavidev/nx-workspace-nodejs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dcdavidev/nx-workspace-nodejs.git",
    "directory": "packages/baka"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@dcdavidev/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE"
  ],
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "tsdown": "^0.15.9",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "name": "baka",
    "tags": [
      "scope:package"
    ],
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "inputs": [
          "production"
        ],
        "outputs": [
          "{projectRoot}/dist"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "parallel": false,
          "commands": [
            "tsdown"
          ]
        }
      },
      "watch": {
        "executor": "nx:run-commands",
        "inputs": [
          "default"
        ],
        "options": {
          "cwd": "{projectRoot}",
          "commands": [
            "tsdown --watch"
          ]
        }
      }
    }
  }
}
